#!c:/progra~1/cygwin/bin/bash
#
# Shell script to create clean tar file under Cygwin.
#
# Usage: release-spim <source-dir> <target-dir>
#

VERSION=7.2
SRC="CPU spim xspim Tests"
TGT=spim-$VERSION

rm -f */*~
rm -f Tests/tt.endian.s
pushd spim
make -f Makefile.cygwin clean
rm -f configuration
popd


rm -fr $TGT
mkdir $TGT

for f in $SRC ; do
  cp -p -R $f $TGT
done
cp -p README VERSION $TGT


pushd $TGT
rm -fr .svn
for f in * ; do
  rm -fr */.svn
  if test -f $f ; then
    cat $f | tr -d "\r" > $f.xxx;
    mv $f.xxx $f;
  else
    for fs in $f/* ; do
      if test -f $fs ; then
        cat $fs | tr -d "\r" > $fs.xxx;
        mv $fs.xxx $fs;
      fi;
    done;
  fi;
done
chmod +x spim/Configure xspim/Configure
popd

tar cvf spim-$VERSION.tar spim-$VERSION
gzip spim-$VERSION.tar
mv spim-$VERSION.tar.gz ..
